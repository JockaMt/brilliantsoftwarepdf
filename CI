name: CI - Build Tauri (Linux / Windows / macOS)

on:
  push:
    branches: [ "main" ]
  pull_request:

jobs:
  build-linux:
    name: Build (Linux)
    runs-on: ubuntu-latest
    env:
      LICENSE_API_URL: ${{ secrets.LICENSE_API_URL }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Cache Node modules
        uses: actions/cache@v4
        with:
          path: |
            ~/.npm
            node_modules
          key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      - name: Cache Cargo
        uses: actions/cache@v4
        with:
          path: |
            ~/.cargo/registry
            ~/.cargo/git
            src-tauri/target
            target
          key: ${{ runner.os }}-cargo-${{ hashFiles('**/Cargo.lock') }}
          restore-keys: |
            ${{ runner.os }}-cargo-

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Setup Rust
        uses: actions-rs/toolchain@v1
        with:
          toolchain: stable
          override: true

      - name: Install system deps (Ubuntu)
        run: |
          sudo apt-get update
          sudo apt-get install -y libgtk-3-dev libwebkit2gtk-4.0-dev libasound2 libx11-dev libxcb1-dev build-essential

      - name: Install Node dependencies
        run: npm ci

      - name: Build frontend
        run: npm run build --if-present

      - name: Build Tauri (Linux)
        run: npm run tauri build --if-present
        env:
          LICENSE_API_URL: ${{ secrets.LICENSE_API_URL }}

      - name: Upload Linux artifacts
        uses: actions/upload-artifact@v4
        with:
          name: tauri-linux-bundles
          path: |
            src-tauri/target/release/bundle/**
            src-tauri/target/release/*.*

  build-windows:
    name: Build (Windows)
    runs-on: windows-latest
    env:
      LICENSE_API_URL: ${{ secrets.LICENSE_API_URL }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Cache Node modules
        uses: actions/cache@v4
        with:
          path: |
            %USERPROFILE%\.npm
            node_modules
          key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      - name: Cache Cargo
        uses: actions/cache@v4
        with:
          path: |
            %USERPROFILE%\.cargo\registry
            %USERPROFILE%\.cargo\git
            src-tauri\target
            target
          key: ${{ runner.os }}-cargo-${{ hashFiles('**/Cargo.lock') }}
          restore-keys: |
            ${{ runner.os }}-cargo-

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Setup Rust (MSVC)
        uses: actions-rs/toolchain@v1
        with:
          toolchain: stable
          override: true

      - name: Install Windows prerequisites (choco)
        run: |
          choco install -y make mingw
        shell: cmd

      - name: Install Node dependencies
        run: npm ci

      - name: Build frontend
        run: npm run build --if-present

      - name: Build Tauri (Windows)
        run: npm run tauri build --if-present
        env:
          LICENSE_API_URL: ${{ secrets.LICENSE_API_URL }}

      - name: Upload Windows artifacts
        uses: actions/upload-artifact@v4
        with:
          name: tauri-windows-bundles
          path: |
            src-tauri\target\release\bundle\**
            src-tauri\target\release\*.*

  build-macos:
    name: Build (macOS)
    runs-on: macos-latest
    env:
      LICENSE_API_URL: ${{ secrets.LICENSE_API_URL }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Cache Node modules
        uses: actions/cache@v4
        with:
          path: |
            ~/.npm
            node_modules
          key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      - name: Cache Cargo
        uses: actions/cache@v4
        with:
          path: |
            ~/.cargo/registry
            ~/.cargo/git
            src-tauri/target
            target
          key: ${{ runner.os }}-cargo-${{ hashFiles('**/Cargo.lock') }}
          restore-keys: |
            ${{ runner.os }}-cargo-

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Setup Rust
        uses: actions-rs/toolchain@v1
        with:
          toolchain: stable
          override: true

      - name: Install macOS deps (Homebrew)
        run: |
          brew update
          brew install pkg-config gtk+3

      - name: Install Node dependencies
        run: npm ci

      - name: Build frontend
        run: npm run build --if-present

      - name: Build Tauri (macOS)
        run: npm run tauri build --if-present
        env:
          LICENSE_API_URL: ${{ secrets.LICENSE_API_URL }}

      - name: Upload macOS artifacts
        uses: actions/upload-artifact@v4
        with:
          name: tauri-macos-bundles
          path: |
            src-tauri/target/release/bundle/**
            src-tauri/target/release/*.*