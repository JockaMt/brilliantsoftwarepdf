{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "brilliant-software",
  "version": "1.1.1",
  "identifier": "com.brilliant-software.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Brilliant PDF",
        "width": 1280,
        "height": 720,
        "minWidth": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCQjA5RTc1OUYzQUQ1MDEKUldRQjFUcWZkWjZ3S3dqSkc5cGlnMFRqb0RZSFZ5VTN4anFmY3JiQi9ROTY4bHh5Z0tZZ0hDK3kK",
      "endpoints": [
        "https://brilliantsoftwareapi.onrender.com/{{target}}/{{arch}}/{{current_version}}",
        "https://github.com/jockamt/brilliantsoftwarepdf/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
